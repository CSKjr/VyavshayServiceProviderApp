<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="2dp"
    android:paddingTop="2dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <TextView
        android:id="@+id/eventListheading"
        android:layout_width="84dp"
        android:layout_height="37dp"
        android:text="ORDER ID:"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/eventlistOrderNo"
        android:layout_width="122dp"
        android:layout_height="37dp"
        android:layout_toEndOf="@id/eventListheading"
        android:layout_toRightOf="@id/eventListheading"
        android:text="#1276437198" />

    <TextView
        android:id="@+id/eventlistDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="12 Mar 2021" />


    <TextView
        android:id="@+id/eventlistTime"
        android:layout_width="135dp"
        android:layout_height="30dp"
        android:layout_below="@id/eventlistDate"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="9:00 AM - 12:00 PM"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/eventlistTotalPrice"
        android:text="PAID"
        android:textColor="@color/appcolor"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/eventlistTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Total Price:"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/eventlistPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="5dp"
        android:layout_toRightOf="@id/eventlistTotalPrice"
        android:text="â‚¹350"
        android:textStyle="bold" />

    <Button
        android:id="@+id/eventlistView"
        android:layout_width="84dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:background="@drawable/green_outline_shape"
        android:text="View"
        app:backgroundTint="#8BC34A" />

</RelativeLayout>

